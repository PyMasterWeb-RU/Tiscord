<UserControl x:Class="Tiscord.ModuleBase"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tiscord"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Background="{Binding ModuleColor}" CornerRadius="10" Margin="5">
            <TextBlock Text="{Binding Title}" FontSize="16" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10"/>
        </Border>
    </Grid>

</UserControl>
